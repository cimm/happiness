.container
  .clearfix
    .sm-col.sm-col-12
      %h1 Users

  .clearfix.mb4
    .sm-col.sm-col-12
      %table.table-light
        %thead
          %tr
            %th= t('email')
            %th= t('surveys')
            %th= t('last')
        %tbody
        - @users.each do |user|
          %tr
            %td= user.email
            %td= user.surveys.count
            %td
              - if user.surveys.any?
                = user.surveys.last.created_at.to_date.to_s(:short)
              - else
                .gray NA
